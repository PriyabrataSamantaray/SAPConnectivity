<UserControl x:Class="slControls.editDrop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="299" d:DesignWidth="449">

    
    <Grid x:Name="LayoutRoot"  Height="27" Width="275">
        <ComboBox Height="23" HorizontalAlignment="Left" Name="comboBox1" VerticalAlignment="Top" Width="200" Margin="0,0,0,0" SelectionChanged="comboBox1_SelectionChanged" Visibility="Collapsed" />
        <Image Height="23" Width="23" Margin="216,0,0,0" Name="image1" Stretch="None" VerticalAlignment="Top" Source="/slControls;component/Images/Modify.png" MouseLeftButtonDown="image1_MouseLeftButtonDown" HorizontalAlignment="Left" MouseEnter="hover_MouseEnter" MouseLeave="hover_MouseLeave" Visibility="Collapsed" />
        <TextBox Height="23" HorizontalAlignment="left" Name="textBox1" VerticalAlignment="Top" Width="200" Visibility="Collapsed" Margin="0,0,0,0" LostFocus="textBox1_LostFocus" GotFocus="textBox1_GotFocus" KeyUp="textBox1_KeyUp" />
    </Grid>
</UserControl>
