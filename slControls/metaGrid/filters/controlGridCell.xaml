<UserControl x:Class="slControls.metaGrid.filters.controlGridCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
  >

    <Border  BorderThickness="2" Background="LightGray"  Name="borderObj" BorderBrush="Black" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <TextBlock  TextWrapping="Wrap" Name="cellText" Text="Text in a Rectangle" Margin="0,0,0,0" VerticalAlignment="Top"   />
            <Rectangle  RadiusX="6" RadiusY="20" Height="13" Width="40" Fill="Blue" Visibility="Collapsed" Name="graphicText" Stroke="Black" StrokeThickness="1" Margin="45,0,0,0" />
        </Grid>

    </Border>
</UserControl>
