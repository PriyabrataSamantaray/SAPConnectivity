<UserControl x:Class="slControls.metaGrid.filters.filterHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    mc:Ignorable="d"
    d:DesignHeight="28" d:DesignWidth="224">

    <Grid x:Name="LayoutRoot" Background="{x:Null}">
        <StackPanel Orientation="Horizontal" Height="28"   >
            <Image Name="img1" Height="24" Width="24" Source="/slControls;component/metaGrid/filters/img/Filter-Off.png" MouseLeftButtonDown="img1_MouseLeftButtonDown" />
            <sdk:Label Height="28" Name="label1" Width="200" MouseLeftButtonDown="label1_MouseLeftButtonDown" />
        </StackPanel>
    </Grid>
</UserControl>
